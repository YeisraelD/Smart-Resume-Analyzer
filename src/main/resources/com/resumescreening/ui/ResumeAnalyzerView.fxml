<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="root" style="-fx-background-color: linear-gradient(to bottom right, #e0c3fc, #8ec5fc); -fx-font-family: 'Segoe UI', sans-serif;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.resumescreening.ui.GUIController">
   <top>
      <VBox fx:id="logoContainer" alignment="CENTER" spacing="10.0" style="-fx-background-color: rgba(255, 255, 255, 0.4); -fx-border-color: transparent transparent linear-gradient(to right, #667eea, #764ba2) transparent; -fx-border-width: 0 0 3 0; -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.1), 15, 0, 0, 0);" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="15.0" top="15.0" />
         </padding>
         <children>
            <ImageView fx:id="logoView" fitHeight="100.0" pickOnBounds="true" preserveRatio="true" />
            <Label text="SMART HIRE" textFill="#4a148c">
               <font>
                  <Font name="System Bold" size="38.0" />
               </font>
               <style>
                  -fx-letter-spacing: 3px; -fx-effect: dropshadow(two-pass-box, rgba(102, 126, 234, 0.4), 10, 0, 0, 2);
               </style>
            </Label>
            <Label text="AI-Powered Screening" textFill="#6a1b9a">
               <font>
                  <Font name="System Italic" size="14.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </top>
   <left>
      <VBox minWidth="300.0" prefWidth="350.0" spacing="20.0" style="-fx-background-color: rgba(255, 255, 255, 0.6); -fx-border-color: transparent linear-gradient(to bottom, #667eea, #764ba2) transparent transparent; -fx-border-width: 0 2 0 0;" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="30.0" left="20.0" right="20.0" top="30.0" />
         </padding>
         <children>
            <VBox spacing="8.0">
               <children>
                  <Label text="Hugging Face API Key:" textFill="#3f51b5">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                  </Label>
                  <TextField fx:id="apiKeyField" promptText="Enter API Key..." style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-background-color: white; -fx-border-color: #667eea; -fx-text-fill: #24292e; -fx-prompt-text-fill: #8c959f; -fx-effect: dropshadow(three-pass-box, rgba(102, 126, 234, 0.1), 5, 0, 0, 0);">
                     <padding>
                        <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
                     </padding>
                  </TextField>
               </children>
            </VBox>
            <VBox spacing="8.0" VBox.vgrow="ALWAYS">
               <children>
                  <Label text="Job Description:" textFill="#3f51b5">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                  </Label>
                  <TextArea fx:id="jdArea" prefRowCount="8" promptText="Paste Job Description..." style="-fx-control-inner-background: white; -fx-text-fill: #24292e; -fx-prompt-text-fill: #8c959f; -fx-background-color: white; -fx-border-color: #667eea; -fx-border-radius: 10; -fx-background-radius: 10;" wrapText="true" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
            <Button fx:id="uploadButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleFileUpload" onMouseEntered="#handleButtonHover" onMouseExited="#handleButtonExit" style="-fx-background-color: linear-gradient(to right, #4facfe 0%, #00f2fe 100%); -fx-background-radius: 30; -fx-text-fill: white; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(79, 172, 254, 0.4), 10, 0, 0, 0);" text="Upload Resumes">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
               <padding>
                  <Insets bottom="14.0" left="25.0" right="25.0" top="14.0" />
               </padding>
            </Button>
            <Label fx:id="resumeCountLabel" text="No resumes uploaded" textFill="#6a1b9a">
               <font>
                  <Font name="System Italic" size="12.0" />
               </font>
               <padding>
                  <Insets left="5.0" />
               </padding>
            </Label>
            <Button fx:id="analyzeButton" layoutX="30.0" layoutY="542.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleAnalysis" onMouseEntered="#handleAnalyzeHover" onMouseExited="#handleAnalyzeExit" style="-fx-background-color: linear-gradient(to right, #667eea 0%, #764ba2 100%); -fx-background-radius: 30; -fx-text-fill: white; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(102, 126, 234, 0.4), 10, 0, 0, 0);" text="Analyze Candidates">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
               <padding>
                  <Insets bottom="14.0" left="25.0" right="25.0" top="14.0" />
               </padding>
            </Button>
            <Button fx:id="clearButton" layoutX="30.0" layoutY="607.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleClear" style="-fx-background-color: linear-gradient(to right, #ff0844 0%, #ffb199 100%); -fx-background-radius: 30; -fx-text-fill: white; -fx-cursor: hand;" text="Clear Workspace">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
               <padding>
                  <Insets bottom="12.0" left="20.0" right="20.0" top="12.0" />
               </padding>
            </Button>
            <Label fx:id="statusLabel" alignment="CENTER" maxWidth="1.7976931348623157E308" text="System Ready" textFill="#4a148c">
               <font>
                  <Font name="System Bold" size="11.0" />
               </font>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </Label>
         </children>
      </VBox>
   </left>
   <center>
      <SplitPane dividerPositions="0.45" orientation="VERTICAL" style="-fx-background-color: transparent;" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         
         <items>
            <VBox spacing="10.0" style="-fx-background-color: transparent;">
               <children>
                  <Label text="Analysis Dashboard" textFill="#4a148c">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                  </Label>
                  <TableView fx:id="resultsTable" minHeight="200.0" style="-fx-background-color: rgba(255, 255, 255, 0.7); -fx-background-radius: 15; -fx-base: transparent; -fx-control-inner-background: rgba(255, 255, 255, 0.7); -fx-table-cell-border-color: #e0c3fc;" VBox.vgrow="ALWAYS">
                    <columns>
                      <TableColumn fx:id="nameCol" prefWidth="150.0" style="-fx-alignment: CENTER-LEFT; -fx-font-weight: bold; -fx-text-fill: #4a148c; -fx-font-size: 14px;" text="Candidate Name" />
                      <TableColumn fx:id="scoreCol" prefWidth="100.0" style="-fx-alignment: CENTER;" text="Match %" />
                        <TableColumn fx:id="skillsCol" prefWidth="200.0" style="-fx-alignment: CENTER-LEFT; -fx-text-fill: #6a1b9a;" text="Matched Skills" />
                        <TableColumn fx:id="roleCol" prefWidth="150.0" style="-fx-alignment: CENTER-LEFT; -fx-text-fill: #3f51b5; -fx-font-weight: bold;" text="Predicted Role" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
            </VBox>
            <HBox spacing="20.0" style="-fx-background-color: transparent;">
               <padding>
                  <Insets top="10.0" />
               </padding>
               <children>
                  <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Semantic Evaluation" textFill="#4a148c">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font>
                        </Label>
                        <ScrollPane fx:id="detailsScrollPane" fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent; -fx-border-color: #667eea; -fx-border-radius: 15; -fx-background-radius: 15;" VBox.vgrow="ALWAYS">
                           <content>
                               <VBox fx:id="detailsContent" spacing="15.0" style="-fx-background-color: rgba(255, 255, 255, 0.3);">
                                 <padding>
                                    <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                                 </padding>
                              </VBox>
                           </content>
                        </ScrollPane>
                     </children>
                  </VBox>
                  <VBox minWidth="300.0" prefWidth="350.0" spacing="10.0" HBox.hgrow="NEVER">
                     <children>
                        <Label text="Competency Map" textFill="#4a148c">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font>
                        </Label>
                        <PieChart fx:id="skillsChart" labelsVisible="true" legendVisible="false" style="-fx-background-color: rgba(255, 255, 255, 0.7); -fx-background-radius: 15; -fx-border-color: #667eea; -fx-border-radius: 15; -fx-padding: 10;" VBox.vgrow="ALWAYS" />
                     </children>
                  </VBox>
               </children>
            </HBox>
         </items>
      </SplitPane>
   </center>
</BorderPane>
